{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
	<div class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-12">
					<div class="card ">
						<div class="header">
							<h4 class="title">Liste des commandes</h4>
							<a href="/order/create" class="btn btn-info btn-fill pull-right">Passer commande
								<i class="pe-7s-plus"></i>
							</a>
						</div>
						<div class="content table-responsive table-full-width">
							<table class="table table-hover">
								<thead>
									<th>Id</th>
									<th>Date</th>
									<th>Total</th>
								</thead>

								<tbody>

									{% for order in pagination %}
										<tr data-href='/order/{{ order.id }}/show'>
											<td>{{ order.id }}</td>
											<td>{{ order.date | date("m/d/Y H:i:s") }}</td>
											<td>{{ order.total }}</td>
										</tr>
									{% endfor %}
								</tbody>

							</table>

						</div>
					</div>
				</div>
			</div>
			<nav aria-label="Page navigation example">
				{{ knp_pagination_render(pagination) }}
			</nav>
		{% endblock %}
