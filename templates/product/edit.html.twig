{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
	<div class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-12">
					<div class="card">
						<div class="header">
							<h4 class="title">Mise à jour produit</h4>
						</div>
						<div class="content">
							<form method="post" action="/admin/product/{{product.id}}/update">
								<input type="hidden" name="_method" value="PATCH">
								<div class="row">
									<div class="col-md-4">
										<div class="form-group">
											<label for="name">Nom</label>
											<input type="text" id="name" class="form-control" name="name" placeholder="{{product.name}}">
										</div>
									</div>
									<div class="col-md-4">
										<div class="form-group">
											<label>Fournisseur</label>
											<div class="select-box">
												<div class="options-container ">
													
												</div>
												<div class="selected ">{{product.provider.name}}</div>
												<div class="search-box ">
													<input type="text" class="form-control" placeholder="{{product.provider.name}}"/>
												</div>
											</div>
											<small id="providercheck" class="text-danger"></small>
										</div>
									</div>
									<div class="col-md-4">
										<div class="form-group">
											<label for="unit_price">Prix unitaire</label>
											<input type="text" id="unit_price" class="form-control" name="unit_price" placeholder="{{product.unitPrice}}"/>
											<small id="punit_pricecheck" class="text-danger"></small>
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-md-12">
										<label class="toggle">
											{% if product.activated is not null %}
												<span for"active" class="toggle-label">Activé</span>
												<input class="toggle-checkbox" id="active" name="activated" type="checkbox" checked>
												<div class="toggle-switch"></div>
											{% else %}
												<span for"active" class="toggle-label">Activé</span>
												<input class="toggle-checkbox" id="active" name="activated" type="checkbox">
												<div class="toggle-switch"></div>
											{% endif %}

										</label>
									</div>
								</div>
								<button type="submit" id="submit" class="btn btn-info btn-fill pull-right">Mise à jour</button>
								<div class="clearfix"></div>
							</form>
						</div>
					</div>
				</div>
			</div>

		{% endblock %}
